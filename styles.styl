html
  font-family: 'Alegreya Sans', sans-serif
  font-size: 100%
  list-style-type: none
  margin: 0
  text-decoration: none

.giant-container
  background-color: turquoise
  background-size: cover

.left-aside
  // background-color: pink
  display: flex
  flex-direction: column
  height: 100vw
  position: fixed
  text-align: right
  width: 15em

.intro
  // background-color: turquoise
  font-size: 2em
  height: 20vh
  padding-left: 1.5em
  padding-top: 0.5em
  text-align: center

.links
  // background-color: purple
  font-size: 35px
  height: 30vh
  padding-right: 1.45em


li > a
  color: black
  position: relative
  text-decoration: none

li > a:hover
  color: black

li > a:before
  background-color: black
  bottom: 0
  content: ""
  height: 2px
  left: 0
  position: absolute
  width: 100%
  visibility: hidden
  -webkit-transform: scaleX(0)
  transform: scaleX(0)
  -webkit-transition: all 0.3s ease-in-out 0s
  transition: all 0.3s ease-in-out 0s

li > a:hover:before
  visibility: visible
  -webkit-transform: scaleX(1)
  transform: scaleX(1)







.photo-grid
  display: grid
  grid-gap: 2em
  grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr
  padding-left: 20%
  padding-top: 8em

.item
  grid-column: span 2
  grid-row-gap: 20em
  grid-row: span 2
  object-fit: cover

img
  height: auto
  width: 100%

img:hover
  // box-shadow: 0 0 50px #000000

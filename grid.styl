
.photo-container
  // background-color: green
  display: flex
  flex-direction: row
  flex-wrap: wrap
  min-height: 100%

.box-1 // street
  background-color: blue
  display: flex
  flex-basis: calc(50% - 40px)
  justify-content: center
  margin-left: 20%

.box-2 // travel
  background-color: orange
  display: flex

.box-3 // events
  background-color: pink
  display: flex

.box-4 // portraits
  background-color: turquoise
  display: flex


.photo-container
  // background-color: green
  display: flex

.photo-col-1
  // background-color: blue
  display: flex
  flex-direction: row
  flex-flow: row wrap
  flex-wrap: wrap
  float: right
  // justify-content: space-between
  margin: 0 auto
  max-width: 20vw
  padding-left: 2em

.photo-col-2
  // background-color: orange
  display: flex
  flex-direction: row
  flex-flow: row wrap
  flex-wrap: wrap
  float: right
  // justify-content: space-between
  margin-left: 30px
  max-width: 40vw

img
  background: none
  cursor: pointer
  height: auto
  margin-left: 0%
  max-width: 400px
  min-width: 0
  padding-bottom: 2.65em
  position: relative


